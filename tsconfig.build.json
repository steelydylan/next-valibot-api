{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "./lib",
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["plugins/**/*", "app/**/*", "node_modules/**/*", "lib/**/*"]
}
